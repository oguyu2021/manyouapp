<h1>タスク一覧</h1>

<p><%= notice %></p>



<%= form_with(url: tasks_path, method: :get) do |form| %>
  <%= form.text_field :title, placeholder: 'タイトルで絞り込む' %>
  <%= form.select :status, Task.statuses.keys.to_a, { include_blank: "選択してください" }  %>
  <%= form.submit '検索' %>
<% end %>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>ステータス</th>
    <th>優先順位</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
    <td><%= link_to "編集する", edit_task_path(task.id) %></td>
    <td><%= link_to '削除する', task_path(task.id), method: :delete, data: { confirm: '本当に削除しますか？' }%></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to '新しくタスクを投稿する', new_task_path %>
<th><%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %><th>
<th><%= link_to "優先順位でソートする", tasks_path(sort_priority: "true") %><th>
